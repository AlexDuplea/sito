{
  "name": "alex-duplea-website",
  "version": "1.0.0",
  "description": "Personal website of Alex Duplea",
  "scripts": {
    "minify:css": "cleancss -o dist/style.min.css style.css",
    "minify:js": "terser script.js -o dist/script.min.js -c -m",
    "minify:html": "html-minifier --collapse-whitespace --remove-comments --minify-css true --minify-js true -o dist/index.html index.html",
    "copy:assets": "xcopy icone dist\\icone /E /I /Y && copy skyline.jpg dist\\ && copy posts.json dist\\ && copy categories.json dist\\",
    "build": "mkdir dist 2>nul & npm run minify:css && npm run minify:js && npm run minify:html && npm run copy:assets",
    "clean": "rmdir /s /q dist 2>nul"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "html-minifier": "^4.0.0",
    "terser": "^5.31.0"
  },
  "author": "Alex Duplea",
  "license": "MIT"
}
